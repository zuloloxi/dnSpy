<UserControl x:Class="dnSpy.AsmEditor.DnlibDialogs.MethodSpecControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:dnlibdlgs="clr-namespace:dnSpy.AsmEditor.DnlibDialogs"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="500">
	<TabControl>
		<TabItem Header="Main">
			<Grid Margin="0 5 0 0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid Grid.Row="0" Margin="0 5 0 0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Button Grid.Column="0" Margin="5 0 0 0" Style="{StaticResource DialogButton}" Content="_Method" Command="{Binding PickMethodCommand}" />
					<TextBox Grid.Column="1" Margin="5 0 0 0" IsReadOnly="True" Background="Transparent" TextWrapping="Wrap" Text="{Binding MethodFullName, Mode=OneWay}" />
				</Grid>
			</Grid>
		</TabItem>
		<TabItem Header="Method Instantiation Types">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<Grid DataContext="{Binding CreateTypeSigArrayVM}">
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<dnlibdlgs:CreateTypeSigArrayControl Grid.Row="0" Margin="0 5 0 0" />
					<Grid Grid.Row="1" Margin="0 5 0 0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<Button Grid.Column="1" Margin="0 0 5 0" Content="_Add" Style="{StaticResource DialogButton}" Command="{Binding AddCommand}" />
						<Button Grid.Column="2" Margin="0 0 0 0" Content="_Delete" Style="{StaticResource DialogButton}" Command="{Binding TypeSigCollection.RemoveSelectedCommand}" />
					</Grid>
				</Grid>
			</ScrollViewer>
		</TabItem>
		<TabItem Header="Custom Attrs">
			<dnlibdlgs:CustomAttributesControl Margin="0 5 0 0" DataContext="{Binding CustomAttributesVM}" />
		</TabItem>
	</TabControl>
</UserControl>